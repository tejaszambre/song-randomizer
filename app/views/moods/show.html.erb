<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @mood.name %>
</p>

<%= link_to 'Edit', edit_mood_path(@mood) %> |

<br>
<br>
<br>
<hr>
<br>

<% if @songs.count.positive? %>
  <h1>Songs Under Mood</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Genre</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td><%= song.artist %></td>
          <td><%= song.genre %></td>
          <td><%= link_to 'Goto Song', song %></td>
          <td><%= link_to 'Remove from Mood', remove_song_mood_path(song_id: song.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>No Songs Is Added In This Mood</h1>
<% end %>

<br>
<br>
<br>
<hr>
<br>

<% if @all_other_songs.count.positive? %>
  <h1>Songs That Are Not Added In This Mood</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Genre</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @all_other_songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td><%= song.artist %></td>
          <td><%= song.genre %></td>
          <td><%= link_to 'Goto Song', song %></td>
          <td><%= link_to 'Add to mood', add_song_mood_path(song_id: song.id), method: :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1>All Songs Added To This Mood</h1>
<% end %>

<%= link_to 'Moods', moods_path %>
<%= link_to 'Users', users_path %>
<%= link_to 'Songs', songs_path %>
